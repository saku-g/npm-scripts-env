{
  "name": "npm-scripts",
  "version": "1.0.0",
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "scripts": {
    "cleanup": "rimraf public/",
    "build:pug": "pug src/pug/ --hierarchy -o public/ -P",
    "watch:pug": "chokidar \"src/**/*.pug\" -c \"npm run build:pug\" --initial -b",
    "sass:dev": "sass src/assets/scss/:public/assets/css/",
    "sass:prod": "npm run sass:dev -- --style=compressed --no-source-map",
    "sass:postcss": "postcss public/assets/css/*.css -r",
    "watch:sass": "chokidar \"src/**/*.scss\" -c \"run-s sass:{dev,postcss}\" --initial",
    "build:sass": "run-s sass:{prod,postcss}",
    "watch:js": "webpack --mode development --watch --devtool=source-map",
    "build:js": "webpack --mode production",
    "watch:server": "browser-sync public -w --open=external",
    "watch:img": "chokidar \"src/assets/img/**/*\" -c \"npm run build:img\" --initial",
    "build:img": "node imagemin.mjs",
    "lint:pug": "markuplint \"src/**/*.pug\"",
    "lint:sass": "stylelint --fix \"src/**/*.scss\" && prettier --write \"src/**/*.scss\"",
    "lint:js": "eslint --fix \"src/**/*.js\" && prettier --write \"src/**/*.js\"",
    "dev": "run-p watch:*",
    "build": "npm-run-all -s cleanup -p lint:* -p build:*"
  },
  "devDependencies": {
    "@markuplint/pug-parser": "^3.10.0",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "markuplint": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.0.3",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^5.0.5",
    "sass": "^1.68.0",
    "stylelint": "^15.10.3",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
